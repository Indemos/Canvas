<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>1.6.0-prerelease</Version>
    <PackageTags>finance chart opengl canvas trading gdi stock direct2d</PackageTags>
    <Copyright>http://indemos.com</Copyright>
    <PackageProjectUrl>https://github.com/Indemos/Canvas</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Indemos/Canvas</RepositoryUrl>
    <Description>Generic real-time charts for Web and Desktop apps with built-in pan and zoom support.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ScriptContainer" Version="1.1.7-prerelease" />
  </ItemGroup>
  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Canvas.Core\Canvas.Core.csproj" />
  </ItemGroup>

</Project>
